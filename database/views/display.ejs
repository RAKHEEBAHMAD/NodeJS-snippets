<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body{
            width: 100%;
            height: 100vh;
        }
        .crads{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .card{
            padding: 10px;
            width: 300px;
            height: 200px;
            border: 2px solid green;
        }
        .card > *{
            margin: 10px;
        }
        .nav {
            background: #000;
            height: 60px;
        }

        .nav li {
            display: inline-block;
            list-style: none;
            height: 60px;
            line-height: 60px;
            padding: 0 40px;
        }

        .nav li:hover {
            background: red;
            transition: background .3s;
        }

        .nav-link {
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="nav">
        <ul>
            <li><a href="/" class="nav-link">Home</a></li>
            <li><a href="/display" class="nav-link"><em>Display</em></a></li>
        </ul>
    </div>
    <h1 style="text-align: center;">Display</h1>

    <div class="crads">
        <% for( let index = 0; index < all.length; index++ ) { %>
            <div class="card">
                <div class="id">id: <%= all[index]._id %></div>
                <div class="name">name: <%= all[index].username %></div>
                <div class="email">email: <%= all[index].email %></div>
                <div class="form">
                    <form action="/display/<%= all[index]._id%>?_method=DELETE">
                        <button type="submit">delete</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>

</body>

</html>



