<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        table,th,tr{
            padding: 10px;
        }

        .nav {
            background: #000;
            height: 60px;
        }

        .nav li {
            display: inline-block;
            list-style: none;
            height: 60px;
            line-height: 60px;
            padding: 0 40px;
        }

        .nav li:hover {
            background: red;
            transition: background .3s;
        }

        .nav-link {
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="nav">
        <ul>
            <li><a href="/" class="nav-link">Home</a></li>
            <li><a href="/display" class="nav-link"><em>Display</em></a></li>
        </ul>
    </div>
    <h1 style="text-align: center;">Display</h1>

    <table border="1">
        <tr>
        <th>id</th>
        <th>name</th>
        <th>email</th>
        <th>action</th>
        </tr>
        <% for( let index=0; index < all.length; index++ ) { %>
        <tr>
                <td>
                    <%= all[index]._id %>
                </td>
                <td>
                    <%= all[index].username %>
                </td>
                <td>
                    <%= all[index].email %>
                </td>
                <td>
                    <form action="/display/<%= all[index]._id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </td>
        </tr>
        <% } %>
    </table>

</body>

</html>



